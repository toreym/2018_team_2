<% @funding_needs.each do |funding_need| %>
  <div class="text-center flip p-2 d-flex flex-wrap">
    <div class="card box-shadow d-flex flex-wrap">
      <div class="face front">
        <div class="card-header card-field-header">
          <h3 class=""><%= funding_need.organization.name %></h3>
        </div>
        <div class="card-body toggle">
          <% if Rails.env.production? %>
            <%= image_tag funding_need.image.url(:medium) %>
          <% else %>
            <img class="card-img" src="https://cdn.glitch.com/6a75ee71-9345-4dd6-ac44-5fb0d2c1d56a%2Fimage.png?1521776197497" alt="Card image"/>
          <% end %>
          <h3 class="pt-2"> <%= funding_need.name %> </h3>
          <h3 class="">Cause Focus:
            <span class="badge badge-pill interest-color">Education</span>
            <span class="badge badge-pill interest-color">Youth</span>
          </h3>
        </div>
      </div>
      <div class="face back">
        <div class="card-header card-field-header">
          <h3 class=""><%= funding_need.organization.name %></h3>
        </div>
        <div class="card-body">
          <h3 class="pt-2"><%= funding_need.name %></h3>
          <p class="pt-2"> <%= funding_need.description %></p>
          <a href="" class="pt-2"><%= funding_need.website %></a>
          <h3 class="pt-2"><%= number_to_currency funding_need.goal %></h3>
          <h3 class="pt-2"><%= funding_need.end_date %></h3>
          <div class="justify-content-end p-2">
            <a class="btn toggle">
              <h3>Flip <span class="badge badge-secondary badge-pill flip-color"><i class="fas fa-arrow-circle-right"></i></span></h3>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
